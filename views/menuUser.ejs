<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Centenaire bataillie</title>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.2.0/socket.io.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>

    <link rel="stylesheet" href="/css/menuUser.css">
</head>
<body>


<div class="wraper">
    <div class="header"></div>
    <div class="container">
        <div class="main__window">
            <!-- Start menu wrapper -->
            <div class="menu__wraper">
                <div class="menu__block menu__left-full">
                    <div class="character__wraper">
                        <!-- кнопки выбора тела -->
                        <div class="changer-btn__wrap">
                            <div class="changer-btn__head">
                                <span class="changer-btn-left"><</span>
                                <span class="changer-btn-right">></span>
                            </div>

                            <div class="changer-btn__body">
                                <span class="changer-btn-left"><</span>
                                <span class="changer-btn-right">></span>
                            </div>

                            <div class="changer-btn__foot">
                                <span class="changer-btn-left"><</span>
                                <span class="changer-btn-right">></span>
                            </div>
                        </div>

                        <img src="/images/pers.jpg" alt="/images/pers.jpg" class="character__img">
                    </div>

                    <div class="nickname__wrap">
                        <form action="" class="nickname-form" id="js-change__nickname">
                            <input type="text" placeholder="<%= data.login %> " name="nickname"
                                   id="js-change_nickname-input">
                        </form>
                    </div>

                </div>
                <div class="menu__block menu__right-bottom">
                    <form action="" class="login__form">
                        <h2 class="login-form__title">Подключиться к серверу</h2>

                        <input type="text" class="login__input" name="server_id" id="js-server_id"
                               placeholder="id#4839">
                        <input type="submit" value="вход" class="btn" id="js-connect_server__submit">
                    </form>
                </div>
            </div>
            <!-- Start menu wrapper -->


            <canvas id="game__container" class="game__container"></canvas>
        </div>
    </div>
</div>


<script src="/js/app.js"></script>

</body>
</html>
